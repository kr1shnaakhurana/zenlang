{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ZenLang",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#classes" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-asterisk.zen",
          "match": "\\*\\*.*$"
        },
        {
          "name": "comment.block.zen",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.zen",
          "match": "\\b(if|else|while|for|do|break|continue|return)\\b"
        },
        {
          "name": "keyword.other.zen",
          "match": "\\b(funct|class|new|this|extends|static|public|private|protected)\\b"
        },
        {
          "name": "keyword.other.include.zen",
          "match": "\\.include|\\.package"
        },
        {
          "name": "constant.language.zen",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.zen",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.zen",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.zen",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.zen",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.zen",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.zen",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "classes": {
      "patterns": [
        {
          "name": "entity.name.type.class.zen",
          "match": "\\b(class)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.other.zen" },
            "2": { "name": "entity.name.type.zen" }
          }
        },
        {
          "name": "entity.name.type.zen",
          "match": "\\b(new)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.other.zen" },
            "2": { "name": "entity.name.type.zen" }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.zen",
          "match": "\\+|\\-|\\*|\\/|%|==|!=|<|>|<=|>=|&&|\\|\\||!|="
        }
      ]
    }
  },
  "scopeName": "source.zen"
}
